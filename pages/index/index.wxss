/**index.wxss**/
.index-top{
  position: relative;
}
.index-top-bg{
  width: 100%;
  height: 350rpx;
}
.index-top-search{
  position: absolute;
  left: 50%;
  bottom: 20%;
  transform: translateX(-50%);
  width: 80%;
  background: #fff;
  overflow: hidden
}
.search-icon{
  float: left;
  padding: 30rpx 30rpx;
}
.search-input{
  padding: 18rpx 0;
  font-size: 30rpx;
}
/* 列表 */
.index-list{
  overflow: hidden;
}
.index-list-item{
  border: 3rpx solid #ccc;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
.item-img{
  float: left;
  width: 70rpx;
  height: 70rpx;
}
.item-text{
  height: 70rpx;
  line-height:70rpx;
  padding-left: 20rpx;
  color:#666;
}