.ranking_top{
  position: relative;
  height: 300rpx;
  overflow: hidden
}
.ranking_img{
  width: 100%;
  height: 100%;
}
.ranking_title{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 60%;
  border: 1px solid #fff;
  text-align: center;
  padding: 50rpx 40rpx;
  color:#fff;
}
.ranking_link{
  position: absolute;
  width: 100%;
  bottom: 0;
  background: green;
  color: #fff;
  text-align: center;
  padding: 20rpx 0;
}