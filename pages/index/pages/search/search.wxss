.search-box{
  overflow: hidden;
}
.search-top{
  overflow: hidden;
  padding: 20rpx;
}
.search-top-box{
  overflow: hidden;
  float: left;
  width: 80%;
  background: #f8f8f8;
}
.search-icon{
  float: left;
  padding: 15rpx 20rpx;
}
.search-input{
  float: left;
  padding: 5rpx 10rpx;
  font-size: 30rpx;
  width: 80%;
}
.search-top-cancel{
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx 0;
  color: #777;
}
.search_record{
  overflow: hidden;
}
.record_cont{
  display: none;
  overflow: hidden;
  padding: 20rpx 40rpx;
}
.record_box{
  overflow: hidden;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.record_title{
  color:#333;
  padding-bottom: 20rpx;
}
.record_list{
  overflow: hidden;
}
.record_list_item{
  float: left;
  color:#666;
  height: 40rpx;
  line-height: 40rpx;
  background: #f8f8f8;
  padding: 10rpx 20rpx;
  margin:0 20rpx 20rpx 0;
  border-radius: 40rpx;
}
.history_record{
  position: relative;
}
.delete_history{
  position: absolute;
  right: 0;
  top: 10rpx;
  color: #666;
}
/* 搜索列表 */
.search_result{
  position: relative;
  overflow: hidden;
  padding: 20rpx 0;
}
.result_filter{
  padding:0 30rpx 20rpx 30rpx;
  color:#888;
  font-size: 30rpx;
  overflow: hidden;
}
.filter_title{
  float: left
}
.filter_icon{
  float: left;
  padding-left:5rpx;
}
.result_list{
  border-top: 1px solid #ccc;
  overflow: hidden;
}

/* 筛选遮罩层 */
.filter_mask{
  display: none;
  position: fixed;
  top: 180rpx;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
}
.mask_show{
  display: block;
}
.mask_list{
  overflow: hidden;
  background: #fff;
  padding-bottom: 20rpx;
}
.mask_item{
  float: left;
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 3% 30rpx 3%;
  text-align: center;
  font-size: 20rpx;
  color:#666;
  border-radius: 60rpx;
}
.item_on{
  margin: 0 3% 26rpx 3%;
  border:1px solid #eb6100;
  color:#eb6100;
}
.mask_btn{
  width: 100%;
  text-align: center;
  border-top: 1px solid #ccc;
  background: #fff;
  padding: 30rpx 0;
  font-size: 30rpx;
  color:#eb6100;
}